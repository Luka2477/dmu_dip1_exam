doctype html
html
  head
    title Express-app 3
    script(src='index.js')
    style.
      a {
        color: blue;
        cursor: pointer;
      }

      a:hover {
        text-decoration: underline;
      }

      p {
        margin-top: 0;
        margin-bottom: 5px;
      }
      
      .flex-hor {
        display: flex;
        align-items: center;
      }
  body
    h3 Kontaker
    ul#contacts
      each contact of contacts
        li #{contact.id}, #{contact.name}, #{contact.phone} #[a(type="button" onclick=`updateContact(${contact.id})`) update phone]
    .flex-hor
      p Name:
      input#name(type="text")
    .flex-hor
      p Phone:
      input#phone(type="text")
    button(onclick='createContact()') Add contact